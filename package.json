{
  "name": "fluidnc-gui-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "A FluidNC Config creation GUI",
  "scripts": {
    "build": "pnpm run -r build",
    "build:docs": "pnpm run --filter docs build",
    "dev": "pnpm run --filter @fluidnc-gui/gui dev",
    "dev:docs": "pnpm run --filter docs start",
    "deploy:docs": "pnpm run --filter docs deploy",
    "lint": "pnpm run -r lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm run -r type-check",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
